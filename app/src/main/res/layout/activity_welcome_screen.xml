<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".WelcomeScreen">

    <TextView android:text="I would like to..." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topString"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Someone"
        android:id="@+id/findSomeoneButton"
        android:layout_below="@+id/topString"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:onClick="onFindSomeone" />

    <Button
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:text="Be Found"
        android:id="@+id/beFoundButton"
        android:layout_below="@+id/findSomeoneButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp"
        android:onClick="onBeFound" />

</RelativeLayout>
